{
    "manifest_version": 3,
    "name": "Google Translate Toggle",
    "version": "1.0",
    "description": "Redirects the current page through Google Translate.",
    "permissions": ["tabs"],
    "action": {
        "default_title": "Translate this page",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
  }
}